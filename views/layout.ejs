<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta http-equiv="content-type" Content="text/html; charset=UTF-8" />
    <meta http-equiv="content-style-type" content="text/css">
    <meta http-equiv="content-script-type" content="text/javascript">
    <meta name="keywords" content="選挙,まとめ">
    <meta name="description" content="選挙サイト">
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/css/core.css' />
    <script type='text/javascript' src='/js/jquery-1.8.3.min.js'></script>
  </head>
  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <a class="brand" href="/"><%= title %></a>
        <div class"nav-collapse collapse">
          <ul class="nav">
            <li><a href="/election/add">選挙登録</a></li>
          <!--
            <li><a href="#">Link 2</a></li>
          -->
            <% if (isLogin && user) { %>
            <li><a>Hello <%= user.displayName %>&nbsp;<img width=25 hight=25 src="https://graph.facebook.com/<%= user.id %>/picture" /></a></li>
            <% } %>
          </ul>
          <ul class="nav pull-right">
            <% if (isLogin) { %>
            <li><a href="/logout">logout</a></li>
            <% } else { %>
            <li><a href="<%= fbLoginPath %>"><img src="/img/flogin.jpg" /></a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div id="sidebar" class="span3">
          <h1><a href="/"><%= title %></a></h1>
          <ul class="nav nav-list">
            <li class="nav-header">選挙</li>
            <% for (var i in electionList) {
               if (electionId == electionList[i].election_id) {
                 var active = "active";
               } else {
                 var active = "nav-header";
               }
            %>
            <li class="<%= active %>"><a href="/election/<%= electionList[i].election_id %>"><%= electionList[i].title %> <%= dateFormat(electionList[i].voting_date, 'yyyy/mm/dd') %></a></li>
            <% } %>
          </ul>
        </div>
        <div class="span9">
          <%- body -%>
        </div>
      </div>
    </div>
    <script type='text/javascript' src='/js/bootstrap.min.js'></script>
<script defer async type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-36912770-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
  </body>
</html>